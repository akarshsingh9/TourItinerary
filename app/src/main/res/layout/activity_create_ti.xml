<?xml version="1.0" encoding="utf-8"?>
<!--XML layout for MainActivity
 1. ScrollView to enable scrolling in the form
 2. There are two sets Views Heading and Result
 3. Submit button in the end to take you to another form performed in another activity
 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".CreateTI">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/head_tino"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:text="Tour Itinerary #"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tino"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="2016_1234"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/head_status"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:text="Status"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Saved as Draft"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head_enterby"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:text="Entered By"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="60dp"
                android:id="@+id/enterby_spinner"
                android:popupElevation="3dp"
                android:elevation="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head_date"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:text="Tour Itinerary Created on"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="27-Apr-2016"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head_TIfor"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:text="Tour Itinerary Created for"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TIfor"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textAllCaps="true"
                android:text="Arun Kumar Panda"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head_contact"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:text="Contact No."/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="60dp"
                android:inputType="number"
                android:id="@+id/contacts"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head_preferredname"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:text="Preferred Name for Ticket Booking"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/preferredname"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textAllCaps="true"
                android:text="Arun Kumar Panda"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head_traveltype"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:text="Type of Travel"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="60dp"
                android:id="@+id/traveltype_spinner"
                android:popupElevation="3dp"
                android:elevation="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head_dept"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:text="Dep./Loc."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dept"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="10107104 Inform Syst Dept. Technical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head_authority"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:text="Approving Authority"/>

                <ImageButton
                    android:id="@+id/searchRO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginStart="62dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_mode_edit_black_24dp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/authority"
                android:layout_marginTop="5dp"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="V Devadas"
                android:textAllCaps="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit_button"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="submit"/>
        </LinearLayout>
    </ScrollView>



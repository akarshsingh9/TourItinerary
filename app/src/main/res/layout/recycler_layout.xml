<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listTi_name"
        android:text="Arun kumar Panda"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listTI_tino"
        android:text="2016_0000361"
        android:textSize="22sp"
        android:layout_below="@id/listTi_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listTI_statusHead"
        android:text="Status"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/listTi_name"
        android:layout_marginEnd="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listTI_status"
        android:text="Submitted"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:layout_below="@id/listTI_statusHead"
        android:layout_alignBaseline="@id/listTI_tino"/>

</RelativeLayout>